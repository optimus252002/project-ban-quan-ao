@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Product_Store.Controllers.AdminController.UpdateProducerviewmodel
<!--Page Heading -->
<h1 class="h3 mb -2 text-gray-800">Chỉnh sửa thương hiệu  </h1>
<p class="mb-4">Thêm chỉnh sửa</p>
<form action="/Admin/SaveUpdateProducer?id=@Model.producer.Id" method="post">
<!--End Page Heading -->

    <div class="form-group">
        <input name="id" type="hidden" class="form-control" id="IDInput" value="@Model.producer.Id">
    </div>

    <div class="form-group">
        <label for="NameInput">Tên thương hiệu</label>
        <input name="name" type="text" class="form-control" id="nameIput" placeholder="Please enter the description" value="@Model.producer.Name">
    </div>
    <div class="descriptionInput">
        <label for="NameInput">Mô tả </label>
        <textarea type="text" class="form-control" id="descriptionInput" name="description"  cols="30" rows="10" value="">@Model.producer.Description</textarea>

    </div>
    <br>
    <a href="/Admin/Producers" class="btn btn-primary btn-icon-split btn-md">
        <button type="button" class="btn btn-secondary" onclick="history.back()">Trở lại</button>
        <button type="submit" class="btn btn-primary btn-icon-split btn-md">
            <span class="icon text-white-30">
                <i class="fas fa-plus"></i>
            </span>
           
                <span class="text">Xác nhận</span>
</form>
