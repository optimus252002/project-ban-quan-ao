    <h1 style="background: white;">Sản phẩm</h1>
    <div class="container">
        <div class="row">
            <div class="container">
                <div style="margin: 24px 0px;color: #052948;font-style: oblique;"
                    class="row row-cols-md-4 row-cols-1 row-cols-sm-2">
                    @foreach (var item in Model.products)
                    {
                        <div class="col">
                            <div class="the">
                                <ul>
                                    <li><a href="#">
                                            <img height="190px" width="cover" src="@item.Image" alt="">
                                        </a></li>
                                    <div class="imgs">
                                        @* <a  href="">
                                            <i  class="them fa-sharp fa-solid fa-cart-plus"></i>
                                        </a> *@
                                        <a href="http://localhost:5129/productstore/chitiet?id=@item.Id&product=@item.Name">
